---
// Datos del menú de navegación
const navItems = [
  { name: 'INICIO', href: '#hero' },
  { name: 'NOSOTROS', href: '#about' },
  { name: 'PACIENTES', href: '#patient-info' },
  { name: 'SERVICIOS', href: '#services' },
  { name: 'BLOG', href: '#blog' },
  { name: 'CONTACTO', href: '#contact' }
];
---

<header class="bg-white py-4 sticky top-0 z-50 shadow-sm">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <div class="flex items-center">
      <a href="/" class="flex items-center">
        <img src="/images/logo.png" alt="DentaPro Logo" class="h-10 w-auto" />
        <span class="ml-2 text-2xl font-bold text-gray-800">Denta<span class="text-cyan-500">Pro</span></span>
      </a>
    </div>
    
    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-sm font-medium text-gray-700 hover:text-cyan-500 transition-colors">
          {item.name}
        </a>
      ))}
    </nav>
    
    <a href="#contact" class="hidden md:block bg-cyan-500 hover:bg-cyan-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
      RESERVAR CITA
    </a>
    
    <button id="menu-button" class="md:hidden text-gray-700 focus:outline-none" aria-controls="mobile-menu" aria-expanded="false">
      <span class="sr-only">Abrir menú principal</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <div id="mobile-menu" class="md:hidden hidden bg-white absolute w-full shadow-md" aria-hidden="true">
    <div class="container mx-auto px-4 py-3 space-y-2">
      {navItems.map(item => (
        <a href={item.href} class="block text-sm font-medium text-gray-700 hover:text-cyan-500 py-2 transition-colors">
          {item.name}
        </a>
      ))}
      <a href="#contact" class="block bg-cyan-500 hover:bg-cyan-600 text-white px-4 py-2 rounded-md text-sm font-medium text-center mt-4 transition-colors">
        RESERVAR CITA
      </a>
    </div>
  </div>
</header>
