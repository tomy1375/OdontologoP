---
// Datos del menú de navegación
const navItems = [
  { name: 'INICIO', href: '#hero' },
  { name: 'NOSOTROS', href: '#about' },
  { name: 'PACIENTES', href: '#patient-info' },
  { name: 'SERVICIOS', href: '#services' },
  { name: 'BLOG', href: '#blog' },
  { name: 'CONTACTO', href: '#contact' }
];
---

<header class="gsap-navbar bg-white py-4 sticky top-0 z-50 shadow-sm">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <div class="gsap-logo flex items-center">
      <a href="/" class="flex items-center">
        <img src="/logodental2.png" alt="DentaPro Logo" class="h-10 w-auto" />
        <!-- <span class="ml-2 text-2xl font-bold text-gray-800">Denta<span class="text-cyan-500">Pro</span></span> -->
      </a>
    </div>
    
    <nav class="gsap-nav hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-sm font-medium text-gray-700 hover:text-cyan-500 transition-colors">
          {item.name}
        </a>
      ))}
    </nav>
    
    <a href="#contact" class="gsap-buttons hidden md:block bg-cyan-500 hover:bg-cyan-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
      RESERVAR CITA
    </a>
    
    <!-- Botón hamburger animado mejorado -->
    <button id="menu-button" class="gsap-mobile-buttons md:hidden text-gray-700 focus:outline-none p-2" aria-controls="mobile-menu" aria-expanded="false">
      <span class="sr-only">Abrir menú principal</span>
      <div class="hamburger-container w-7 h-7 relative flex flex-col justify-center items-center">
        <span class="hamburger-line block w-6 h-0.5 bg-current transform transition-all duration-300 absolute"></span>
        <span class="hamburger-line block w-6 h-0.5 bg-current transform transition-all duration-300 absolute translate-y-1.5"></span>
        <span class="hamburger-line block w-6 h-0.5 bg-current transform transition-all duration-300 absolute -translate-y-1.5"></span>
      </div>
    </button>
  </div>
  
  <!-- Menú móvil con clases para animación -->
  <div id="mobile-menu" class="md:hidden hidden bg-white absolute w-full shadow-lg border-t border-gray-100 overflow-hidden" aria-hidden="true">
    <div class="container mx-auto px-4 py-6">
      <nav class="space-y-1">
        {navItems.map((item, index) => (
          <a 
            href={item.href} 
            class="mobile-menu-item block text-base font-medium text-gray-700 hover:text-cyan-500 hover:bg-cyan-50 py-3 px-4 rounded-lg transition-all duration-200"
            style={`transition-delay: ${index * 50}ms;`}
          >
            {item.name}
          </a>
        ))}
        <div class="pt-4 border-t border-gray-100 mt-4">
          <a 
            href="#contact" 
            class="mobile-menu-item block bg-cyan-500 hover:bg-cyan-600 text-white px-6 py-3 rounded-lg text-base font-medium text-center transition-all duration-200 shadow-md hover:shadow-lg"
          >
            RESERVAR CITA
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<style>
  /* Estilos adicionales para el menú móvil */
  #mobile-menu {
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  
  .mobile-menu-item {
    transform: translateY(-20px);
    opacity: 0;
  }
  
  /* Efecto hover mejorado para móvil */
  @media (max-width: 768px) {
    .mobile-menu-item:active {
      transform: scale(0.98);
    }
  }
  
  /* Animación del hamburger mejorada */
  .hamburger-container {
    /* Contenedor más grande para evitar que se corte la X */
    padding: 2px;
  }
  
  .hamburger-line {
    transform-origin: center;
    transition: transform 0.3s ease, opacity 0.2s ease, top 0.3s ease;
  }
</style>
