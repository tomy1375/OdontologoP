---
const featuredServices = [
  { number: '01.', title: 'Cuidado Preventivo', link: '#services' },
  { number: '02.', title: 'Cuidado Restaurativo', link: '#services' },
  { number: '03.', title: 'Odontología Cosmética', link: '#services' }
];
---

<section id="hero" class="relative w-full min-h-screen bg-white overflow-hidden">
  <div class="grid grid-cols-1 lg:grid-cols-2 min-h-screen">
    
    <!-- Lado Izquierdo - Contenido con Fondo Cyan -->
    <div class="bg-cyan-500 flex items-center justify-center px-4 py-12 sm:px-6 sm:py-16 lg:px-12 lg:py-16 order-2 lg:order-1">
      <div class="max-w-lg text-white animate-fadeIn text-center lg:text-left" style="animation-delay: 0.2s;">
        
        <!-- Subtítulo -->
        <p class="text-cyan-100 text-xs sm:text-sm font-medium tracking-wider uppercase mb-4 sm:mb-6">
          BIENVENIDO A DENTAPRO
        </p>
        
        <!-- Título Principal -->
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-4 sm:mb-6">
          DentaPro - Donde Tu Sonrisa Es La Protagonista
        </h1>
        
        <!-- Descripción -->
        <p class="text-cyan-50 text-base sm:text-lg leading-relaxed mb-6 sm:mb-8">
          Experimenta un cuidado dental personalizado y compasivo con nuestro equipo dedicado de profesionales.
        </p>
        
        <!-- Botón de Acción -->
        <a href="#contact" class="inline-block bg-white text-cyan-600 px-6 py-3 sm:px-8 sm:py-4 rounded-lg font-semibold hover:bg-cyan-50 transition-colors shadow-lg text-sm sm:text-base">
          RESERVAR CONSULTA
        </a>
        
        <!-- Servicios Destacados -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 mt-8 sm:mt-12">
          {featuredServices.map((service, index) => (
            <div class="animate-fadeIn" style={`animation-delay: ${0.4 + index * 0.1}s;`}>
              <p class="text-cyan-200 font-semibold text-xs sm:text-sm mb-1">{service.number}</p>
              <h3 class="text-white font-medium text-sm sm:text-base mb-2">{service.title}</h3>
              <a href={service.link} class="inline-flex items-center text-xs text-cyan-100 hover:text-white transition-colors">
                Saber más
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Lado Derecho - Imagen Grande -->
    <div class="bg-gray-100 relative overflow-hidden animate-fadeIn min-h-[50vh] lg:min-h-full order-1 lg:order-2" style="animation-delay: 0.3s;">
      
      <!-- Imagen Principal -->
      <img 
        src="/dentista.jpg" 
        alt="Consultorio dental moderno y profesional" 
        class="w-full h-full object-cover"
      />
      
      <!-- Gradiente sutil para mejorar la legibilidad -->
      <div class="absolute inset-0 bg-gradient-to-b lg:bg-gradient-to-r from-cyan-500/20 lg:from-cyan-500/10 to-transparent"></div>
      
      <!-- Elementos Decorativos - Ocultos en móvil -->
      <div class="hidden lg:block absolute top-1/4 right-8 w-20 h-20 bg-white/20 rounded-full blur-xl"></div>
      <div class="hidden lg:block absolute bottom-1/3 left-8 w-16 h-16 bg-cyan-300/30 rounded-full blur-lg"></div>
      <div class="hidden lg:block absolute top-2/3 right-1/4 w-12 h-12 bg-white/15 rounded-full blur-md"></div>
      
      <!-- Elementos decorativos simplificados para móvil -->
      <div class="lg:hidden absolute top-8 right-4 w-12 h-12 bg-white/30 rounded-full blur-lg"></div>
      <div class="lg:hidden absolute bottom-8 left-4 w-10 h-10 bg-cyan-300/40 rounded-full blur-md"></div>
    </div>
  </div>
</section>
