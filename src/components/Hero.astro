---
const featuredServices = [
  { number: '01.', title: 'Cuidado Preventivo', link: '#services' },
  { number: '02.', title: 'Cuidado Restaurativo', link: '#services' },
  { number: '03.', title: 'Odontología Cosmética', link: '#services' }
];
---

<section id="hero" class="relative w-full min-h-screen bg-white overflow-hidden flex items-center">
  <div class="container mx-auto px-4 py-16 sm:py-20 md:py-24 lg:py-32"> {/* Ajuste de padding vertical general */}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      {/* Columna de Texto */}
      <div class="space-y-6 text-center lg:text-left animate-fadeIn" style="animation-delay: 0.2s;">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tight text-gray-900">
          Regálate una sonrisa <span class="text-cyan-500">hermosa, natural, brillante y llena de confianza</span>.
        </h1>
        {/* Servicios Destacados */}
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-x-6 gap-y-8 mt-10 md:mt-12 lg:mt-16"> {/* Ajuste de margen superior y gaps */}
          {featuredServices.map((service, index) => (
            <div class="space-y-1 animate-fadeIn" style={`animation-delay: ${0.4 + index * 0.1}s;`}> {/* Reducción de space-y */}
              <p class="text-cyan-600 font-semibold text-sm">{service.number}</p>
              <h3 class="font-semibold text-gray-800 text-base md:text-lg">{service.title}</h3>
              <a href={service.link} class="inline-flex items-center text-xs text-gray-600 hover:text-cyan-500 transition-colors">
                Saber más
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>
      {/* Columna de Imagen */}
      <div class="relative mt-12 lg:mt-0 animate-fadeIn" style="animation-delay: 0.3s;"> {/* Ajuste de margen superior para móvil */}
        {/* Fondo decorativo */}
        <div class="absolute inset-0 opacity-30 grid grid-cols-3 grid-rows-3 gap-0 transform -skew-y-6">
          <div class="bg-cyan-200"></div>
          <div class="bg-cyan-300 col-span-2"></div>
          <div class="bg-cyan-100 row-span-2"></div>
          <div class="bg-cyan-400 col-span-2 row-span-2"></div>
        </div>
        {/* Imagen */}
        <img 
          src="/dentista.jpg" 
          alt="Mujer sonriendo mostrando sus dientes blancos" 
          class="relative z-10 w-full h-auto max-h-[400px] sm:max-h-[450px] md:max-h-[500px] object-cover rounded-lg shadow-2xl mx-auto lg:mx-0"
        />
      </div>
    </div>
  </div>
</section>
